<!DOCTYPE html>
<html>
  <head>
    <title>Admin - BlogPlatform</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="bg-gray-100 min-h-screen">
    <nav class="bg-red-800 shadow-sm">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between h-16">
          <div class="flex items-center">
            <%= link_to "Admin Panel", admin_root_path, class: "text-xl font-bold text-white" %>
          </div>
          
          <div class="flex items-center space-x-4">
            <% if session[:admin_authenticated] %>
              <%= link_to "Dashboard", admin_root_path, class: "text-red-200 hover:text-white" %>
              <%= link_to "Posts", admin_posts_path, class: "text-red-200 hover:text-white" %>
              <%= link_to "Comments", admin_comments_path, class: "text-red-200 hover:text-white" %>
              <%= link_to "Users", admin_users_path, class: "text-red-200 hover:text-white" %>
              <%= link_to "Back to Site", root_path, class: "text-red-200 hover:text-white" %>
              <%= link_to "Logout", admin_logout_path, method: :delete, class: "text-red-200 hover:text-white" %>
            <% end %>
          </div>
        </div>
      </div>
    </nav>

    <main class="max-w-7xl mx-auto py-6 px-4 sm:px-6 lg:px-8">
      <% if notice %>
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">
          <%= notice %>
        </div>
      <% end %>

      <% if alert %>
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
          <%= alert %>
        </div>
      <% end %>

      <%= yield %>
    </main>
  </body>
</html>