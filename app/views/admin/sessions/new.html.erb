<div class="max-w-md mx-auto bg-white rounded-lg shadow-md">
  <div class="p-8">
    <div class="text-center mb-8">
      <h2 class="text-3xl font-bold text-red-800">Admin Login</h2>
      <p class="text-gray-600 mt-2">Access administrative panel</p>
    </div>

    <%= form_with url: admin_login_path, method: :post, local: true do |f| %>
      <div class="space-y-6">
        <div>
          <%= f.label :username, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.text_field :username, autofocus: true, 
                          class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-red-500" %>
        </div>

        <div>
          <%= f.label :password, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.password_field :password, 
                              class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-red-500" %>
        </div>

        <div>
          <%= f.submit "Login as Admin", class: "w-full bg-red-600 text-white py-2 px-4 rounded-md hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-500 font-medium" %>
        </div>
      </div>
    <% end %>

    <div class="mt-6 text-center">
      <p class="text-sm text-gray-500">
        Demo credentials: admin / admin123
      </p>
      <%= link_to "â† Back to Site", root_path, class: "text-blue-600 hover:text-blue-800 text-sm" %>
    </div>
  </div>
</div>