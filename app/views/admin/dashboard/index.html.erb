<div class="mb-8">
  <h1 class="text-3xl font-bold text-gray-900">Admin Dashboard</h1>
  <p class="text-gray-600 mt-2">Platform overview and management tools</p>
</div>

<!-- Stats Overview -->
<div class="grid grid-cols-1 md:grid-cols-5 gap-6 mb-8">
  <div class="bg-white rounded-lg shadow-sm border p-6">
    <div class="flex items-center">
      <div class="p-2 bg-blue-100 rounded-lg">
        <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"></path>
        </svg>
      </div>
      <div class="ml-4">
        <p class="text-2xl font-bold text-gray-900"><%= @stats[:total_users] %></p>
        <p class="text-sm text-gray-600">Total Users</p>
      </div>
    </div>
  </div>

  <div class="bg-white rounded-lg shadow-sm border p-6">
    <div class="flex items-center">
      <div class="p-2 bg-green-100 rounded-lg">
        <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
        </svg>
      </div>
      <div class="ml-4">
        <p class="text-2xl font-bold text-gray-900"><%= @stats[:total_posts] %></p>
        <p class="text-sm text-gray-600">Total Posts</p>
      </div>
    </div>
  </div>

  <div class="bg-white rounded-lg shadow-sm border p-6">
    <div class="flex items-center">
      <div class="p-2 bg-emerald-100 rounded-lg">
        <svg class="w-6 h-6 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
        </svg>
      </div>
      <div class="ml-4">
        <p class="text-2xl font-bold text-gray-900"><%= @stats[:published_posts] %></p>
        <p class="text-sm text-gray-600">Published</p>
      </div>
    </div>
  </div>

  <div class="bg-white rounded-lg shadow-sm border p-6">
    <div class="flex items-center">
      <div class="p-2 bg-yellow-100 rounded-lg">
        <svg class="w-6 h-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"></path>
        </svg>
      </div>
      <div class="ml-4">
        <p class="text-2xl font-bold text-gray-900"><%= @stats[:draft_posts] %></p>
        <p class="text-sm text-gray-600">Drafts</p>
      </div>
    </div>
  </div>

  <div class="bg-white rounded-lg shadow-sm border p-6">
    <div class="flex items-center">
      <div class="p-2 bg-purple-100 rounded-lg">
        <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
        </svg>
      </div>
      <div class="ml-4">
        <p class="text-2xl font-bold text-gray-900"><%= @stats[:total_comments] %></p>
        <p class="text-sm text-gray-600">Comments</p>
      </div>
    </div>
  </div>
</div>

<!-- Recent Activity -->
<div class="grid lg:grid-cols-3 gap-8">
  <!-- Recent Posts -->
  <div class="bg-white rounded-lg shadow-sm border">
    <div class="p-6 border-b">
      <h2 class="text-xl font-bold text-gray-900">Recent Posts</h2>
    </div>
    <div class="p-6">
      <div class="space-y-4">
        <% @recent_posts.each do |post| %>
          <div class="flex items-start justify-between">
            <div class="flex-1">
              <h3 class="font-medium text-gray-900">
                <%= link_to post.title, admin_post_path(post), class: "hover:text-blue-600" %>
              </h3>
              <p class="text-sm text-gray-500 mt-1">
                by <%= post.user.full_name %> â€¢ 
                <span class="px-2 py-1 rounded-full text-xs <%= post.published? ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %>">
                  <%= post.status.titleize %>
                </span>
              </p>
            </div>
            <%= link_to "Delete", admin_post_path(post), method: :delete, 
                        confirm: "Are you sure?", 
                        class: "text-red-600 hover:text-red-800 text-sm ml-4" %>
          </div>
        <% end %>
      </div>
      <div class="mt-4 pt-4 border-t">
        <%= link_to "View All Posts", admin_posts_path, class: "text-blue-600 hover:text-blue-800 text-sm font-medium" %>
      </div>
    </div>
  </div>

  <!-- Recent Comments -->
  <div class="bg-white rounded-lg shadow-sm border">
    <div class="p-6 border-b">
      <h2 class="text-xl font-bold text-gray-900">Recent Comments</h2>
    </div>
    <div class="p-6">
      <div class="space-y-4">
        <% @recent_comments.each do |comment| %>
          <div class="flex items-start justify-between">
            <div class="flex-1">
              <p class="text-sm text-gray-900"><%= comment.body.truncate(60) %></p>
              <p class="text-xs text-gray-500 mt-1">
                by <%= comment.user.full_name %> on 
                <%= link_to comment.post.title, admin_post_path(comment.post), class: "text-blue-600" %>
              </p>
            </div>
            <%= link_to "Delete", admin_comment_path(comment), method: :delete, 
                        confirm: "Are you sure?", 
                        class: "text-red-600 hover:text-red-800 text-sm ml-4" %>
          </div>
        <% end %>
      </div>
      <div class="mt-4 pt-4 border-t">
        <%= link_to "View All Comments", admin_comments_path, class: "text-blue-600 hover:text-blue-800 text-sm font-medium" %>
      </div>
    </div>
  </div>

  <!-- Recent Users -->
  <div class="bg-white rounded-lg shadow-sm border">
    <div class="p-6 border-b">
      <h2 class="text-xl font-bold text-gray-900">Recent Users</h2>
    </div>
    <div class="p-6">
      <div class="space-y-4">
        <% @recent_users.each do |user| %>
          <div class="flex items-center justify-between">
            <div class="flex items-center">
              <div class="w-8 h-8 bg-blue-600 rounded-full flex items-center justify-center text-white text-sm font-medium">
                <%= user.first_name.first %>
              </div>
              <div class="ml-3">
                <p class="text-sm font-medium text-gray-900">
                  <%= link_to user.full_name, admin_user_path(user), class: "hover:text-blue-600" %>
                </p>
                <p class="text-xs text-gray-500"><%= user.email %></p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
      <div class="mt-4 pt-4 border-t">
        <%= link_to "View All Users", admin_users_path, class: "text-blue-600 hover:text-blue-800 text-sm font-medium" %>
      </div>
    </div>
  </div>
</div>