<div class="flex justify-between items-center mb-6">
  <h1 class="text-2xl font-bold text-gray-900">Posts</h1>
  <%= link_to "New Post", new_admin_post_path, class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-md font-medium" %>
</div>

<div class="bg-white shadow overflow-hidden sm:rounded-md">
  <ul class="divide-y divide-gray-200">
    <% if @posts.any? %>
      <% @posts.each do |post| %>
        <li>
          <div class="px-4 py-4 flex items-center justify-between">
            <div class="flex-1 min-w-0">
              <div class="flex items-center space-x-3">
                <h3 class="text-lg font-medium text-gray-900 truncate">
                  <%= link_to post.title, admin_post_path(post), class: "hover:text-blue-600" %>
                </h3>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= post.status == 'published' ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %>">
                  <%= post.status.humanize %>
                </span>
              </div>
              <div class="mt-1">
                <p class="text-sm text-gray-500">
                  Created <%= time_ago_in_words(post.created_at) %> ago
                  <% if post.user %>
                    by <%= post.user.email %>
                  <% end %>
                </p>
              </div>
            </div>
            <div class="flex items-center space-x-2">
              <%= link_to "Edit", edit_admin_post_path(post), class: "text-indigo-600 hover:text-indigo-900 text-sm font-medium" %>
              <%= link_to "Delete", admin_post_path(post), method: :delete, 
                          confirm: "Are you sure?", 
                          class: "text-red-600 hover:text-red-900 text-sm font-medium" %>
            </div>
          </div>
        </li>
      <% end %>
    <% else %>
      <li class="px-4 py-8 text-center">
        <p class="text-gray-500">No posts found.</p>
        <%= link_to "Create your first post", new_admin_post_path, class: "text-blue-600 hover:text-blue-800 font-medium" %>
      </li>
    <% end %>
  </ul>
</div>
