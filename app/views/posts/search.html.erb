<div class="mb-12">
  <div class="text-center mb-8">
    <h1 class="text-4xl font-bold bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent mb-4">
      üîç Search & Discover
    </h1>
    <p class="text-xl text-gray-600 max-w-2xl mx-auto">
      Find the perfect posts using our advanced search and filtering options
    </p>
  </div>

  <div class="bg-white/80 backdrop-blur-sm rounded-2xl shadow-xl border border-gray-200/50 p-8">
    <%= form_with url: search_path, method: :get, local: true, class: "space-y-6" do |f| %>
      <div class="grid md:grid-cols-2 gap-6">
        <div>
          <%= f.label :q, "Search Query", class: "block text-sm font-semibold text-gray-700 mb-2" %>
          <%= f.text_field :q, value: @query, placeholder: "Search posts...", 
                           class: "w-full px-6 py-4 border border-gray-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent text-gray-700 placeholder-gray-400 shadow-sm" %>
        </div>
        
        <div>
          <%= f.label :status, "Post Status", class: "block text-sm font-semibold text-gray-700 mb-2" %>
          <%= f.select :status, 
                       options_for_select([
                         ['All Posts', 'all'],
                         ['Published Only', 'published'],
                         ['Drafts Only', 'draft']
                       ], @status_filter), 
                       {}, 
                       { class: "w-full px-6 py-4 border border-gray-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent text-gray-700 shadow-sm" } %>
        </div>
      </div>

      <div class="grid md:grid-cols-3 gap-6">
        <div>
          <%= f.label :date_from, "From Date", class: "block text-sm font-semibold text-gray-700 mb-2" %>
          <%= f.date_field :date_from, value: @date_from, placeholder: "From date", 
                           class: "w-full px-6 py-4 border border-gray-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent text-gray-700 shadow-sm" %>
        </div>
        
        <div>
          <%= f.label :date_to, "To Date", class: "block text-sm font-semibold text-gray-700 mb-2" %>
          <%= f.date_field :date_to, value: @date_to, placeholder: "To date", 
                           class: "w-full px-6 py-4 border border-gray-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent text-gray-700 shadow-sm" %>
        </div>

        <% if user_signed_in? %>
          <div class="flex items-center pt-8">
            <div class="flex items-center">
              <%= f.check_box :own_posts, { checked: @own_posts }, "1", "0", 
                              class: "h-5 w-5 text-blue-600 border-gray-300 rounded focus:ring-blue-500" %>
              <%= f.label :own_posts, "My Posts Only", class: "ml-3 text-sm font-medium text-gray-700" %>
            </div>
          </div>
        <% end %>
      </div>

      <div class="flex justify-center pt-4">
        <%= f.submit "Search Posts", class: "bg-gradient-to-r from-blue-600 to-purple-600 text-white px-12 py-4 rounded-full hover:from-purple-600 hover:to-blue-600 font-medium transition-all duration-300 shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 flex items-center" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
          </svg>
          Search Posts
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<!-- Search Results -->
<div>
  <% if @query.present? || @status_filter.present? || @date_from.present? || @date_to.present? || @own_posts %>
    <div class="mb-8">
      <h2 class="text-2xl font-bold text-gray-900 flex items-center">
        <svg class="w-6 h-6 mr-3 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
        </svg>
        Search Results 
      </h2>
      <p class="text-gray-600 mt-2">
        <span class="font-medium">
          (<%= @posts.total_count if @posts.respond_to?(:total_count) %> found)
        </span>
      </h2>
    </div>
  <% end %>

  <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
    <% @posts.each do |post| %>
      <article class="bg-white/80 backdrop-blur-sm rounded-2xl shadow-lg hover:shadow-2xl transition-all duration-300 border border-gray-200/50 hover:border-blue-300/50 group overflow-hidden">
        <div class="p-8">
          <div class="flex items-center justify-between mb-4">
            <div class="flex items-center">
              <div class="w-10 h-10 bg-gradient-to-r from-blue-500 to-purple-500 rounded-full flex items-center justify-center text-white text-sm font-semibold shadow-lg">
                <%= post.user.first_name.first.upcase %>
              </div>
              <div class="ml-4">
                <p class="text-sm font-semibold text-gray-900"><%= post.user.full_name %></p>
                <p class="text-xs text-gray-500 flex items-center">
                  <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                  <%= post.created_at.strftime("%B %d, %Y") %>
                </p>
              </div>
            </div>
            
            <% unless post.published? %>
              <span class="bg-yellow-100 text-yellow-800 px-3 py-1 rounded-full text-xs font-semibold shadow-sm">
                <svg class="w-3 h-3 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"></path>
                </svg>
                Draft
              </span>
            <% end %>
          </div>
          
          <h2 class="text-xl font-bold text-gray-900 mb-4 group-hover:text-blue-600 transition-colors duration-200 line-clamp-2">
            <%= link_to post.title, post %>
          </h2>
          
          <p class="text-gray-600 mb-6 leading-relaxed line-clamp-3">
            <%= post.excerpt %>
          </p>
          
          <div class="flex items-center justify-between">
            <div class="flex items-center space-x-4 text-sm text-gray-500">
              <span class="flex items-center">
                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
                </svg>
                <%= pluralize(post.comments.count, 'comment') %>
              </span>
            </div>
            <%= link_to "Read More", post, class: "inline-flex items-center text-blue-600 hover:text-purple-600 font-medium transition-colors duration-200" do %>
              Read More
              <svg class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            <% end %>
          </div>
        </div>
      </article>
    <% end %>
  </div>

  <% if @posts.empty? %>
    <div class="text-center py-20">
      <div class="w-32 h-32 mx-auto mb-6 bg-gradient-to-r from-gray-100 to-gray-200 rounded-full flex items-center justify-center">
        <svg class="w-16 h-16 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
        </svg>
      </div>
      <h3 class="text-2xl font-bold text-gray-900 mb-4">No posts found</h3>
      <p class="text-gray-500 mb-8 max-w-md mx-auto">Try adjusting your search criteria or browse all posts to discover amazing content.</p>
      <%= link_to "Browse All Posts", posts_path, class: "bg-gradient-to-r from-blue-600 to-purple-600 text-white px-8 py-3 rounded-full hover:from-purple-600 hover:to-blue-600 font-medium transition-all duration-300 shadow-lg hover:shadow-xl transform hover:-translate-y-0.5" %>
    </div>
  <% end %>

  <div class="mt-12 flex justify-center">
    <%= paginate @posts if @posts.respond_to?(:current_page) %>
  </div>
</div>