<%= form_with model: post, local: true, class: "p-10 space-y-8" do |f| %>
  <% if post.errors.any? %>
    <div class="bg-red-50 border-l-4 border-red-400 rounded-r-xl p-6">
      <div class="flex items-center mb-3">
        <svg class="w-5 h-5 text-red-400 mr-2" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
        </svg>
        <h3 class="text-sm font-semibold text-red-800">Please fix the following errors:</h3>
      </div>
      <ul class="text-sm text-red-700 space-y-1">
        <% post.errors.full_messages.each do |message| %>
          <li class="flex items-center">
            <svg class="w-3 h-3 mr-2" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path></svg>
            <%= message %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :title, "Post Title", class: "block text-sm font-semibold text-gray-700 mb-3" %>
    <%= f.text_field :title, placeholder: "Enter your post title...", 
                      class: "w-full px-6 py-4 border border-gray-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent text-lg font-medium text-gray-700 placeholder-gray-400 shadow-sm" %>
  </div>

  <div>
    <%# FIX: Changed :body to :content to match the database column we renamed earlier %>
    <%= f.label :content, "Post Content", class: "block text-sm font-semibold text-gray-700 mb-3" %>
    <%= f.text_area :content, rows: 15, placeholder: "Write your post content here...", 
                      class: "w-full px-6 py-4 border border-gray-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent resize-none text-gray-700 placeholder-gray-400 shadow-sm leading-relaxed" %>
  </div>

  <div>
    <%= f.label :status, "Publication Status", class: "block text-sm font-semibold text-gray-700 mb-3" %>
    <%= f.select :status, 
                  options_for_select([['Save as Draft', 'draft'], ['Publish Now', 'published']], post.status), 
                  {}, 
                  { class: "w-full px-6 py-4 border border-gray-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent text-gray-700 shadow-sm" } %>
  </div>

  <div class="flex items-center justify-between pt-8 border-t border-gray-200">
    <%= link_to posts_path, class: "inline-flex items-center text-gray-600 hover:text-gray-800 font-medium transition-colors duration-200" do %>
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
      </svg>
      Cancel
    <% end %>
    <div class="flex space-x-4">
      <%# FIX: Changed f.submit to a <button> tag to allow an icon inside %>
      <button type="submit" class="bg-gradient-to-r from-blue-600 to-purple-600 text-white px-10 py-4 rounded-full hover:from-purple-600 hover:to-blue-600 font-medium transition-all duration-300 shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 flex items-center cursor-pointer">
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
        </svg>
        <%# The button text changes based on whether it's a new post or an edit %>
        <%= post.persisted? ? "Update Post" : "Create Post" %>
      </button>
    </div>
  </div>
<% end %>
