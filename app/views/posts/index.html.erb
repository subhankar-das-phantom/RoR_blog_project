<div class="text-center mb-12">
  <h1 class="text-4xl font-bold bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent mb-4">
    Discover Amazing Stories
  </h1>
  <p class="text-xl text-gray-600 max-w-2xl mx-auto">
    Explore the latest posts from our community of writers and storytellers
  </p>
</div>

<div class="flex justify-between items-center mb-8">
  <% if user_signed_in? %>
    <div class="flex items-center space-x-4">
      <%= link_to "Write a Post", new_post_path, class: "bg-gradient-to-r from-blue-600 to-purple-600 text-white px-8 py-3 rounded-full hover:from-purple-600 hover:to-blue-600 transition-all duration-300 shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 font-medium" %>
      <%= link_to "My Dashboard", dashboard_user_path(current_user), class: "text-blue-600 hover:text-purple-600 font-medium transition-colors duration-200" %>
    </div>
  <% else %>
    <div class="bg-gradient-to-r from-blue-50 to-purple-50 rounded-xl p-6 border border-blue-200/50">
      <p class="text-gray-700 mb-4">Join our community to start sharing your stories!</p>
      <div class="flex space-x-4">
        <%= link_to "Sign Up", new_user_registration_path, class: "bg-gradient-to-r from-blue-600 to-purple-600 text-white px-6 py-2 rounded-full hover:from-purple-600 hover:to-blue-600 transition-all duration-300 font-medium" %>
        <%= link_to "Login", new_user_session_path, class: "text-blue-600 hover:text-purple-600 font-medium transition-colors duration-200" %>
      </div>
    </div>
  <% end %>
</div>

<div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
  <% @posts.each do |post| %>
    <article class="bg-white/80 backdrop-blur-sm rounded-2xl shadow-lg hover:shadow-2xl transition-all duration-300 border border-gray-200/50 hover:border-blue-300/50 group overflow-hidden">
      <div class="p-8">
        <div class="flex items-center mb-4">
          <div class="w-10 h-10 bg-gradient-to-r from-blue-500 to-purple-500 rounded-full flex items-center justify-center text-white text-sm font-semibold shadow-lg">
            <%= post.user.first_name.first %>
          </div>
          <div class="ml-4">
            <p class="text-sm font-semibold text-gray-900"><%= post.user.full_name %></p>
            <p class="text-xs text-gray-500 flex items-center">
              <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <%= post.created_at.strftime("%B %d, %Y") %>
            </p>
          </div>
        </div>
        
        <h2 class="text-xl font-bold text-gray-900 mb-4 group-hover:text-blue-600 transition-colors duration-200 line-clamp-2">
          <%= link_to post.title, post %>
        </h2>
        
        <p class="text-gray-600 mb-6 leading-relaxed line-clamp-3">
          <%= post.excerpt %>
        </p>
        
        <div class="flex items-center justify-between">
          <div class="flex items-center space-x-4 text-sm text-gray-500">
            <span class="flex items-center">
              <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
              </svg>
              <%= pluralize(post.comments.count, 'comment') %>
            </span>
          </div>
          <%= link_to "Read More", post, class: "inline-flex items-center text-blue-600 hover:text-purple-600 font-medium transition-colors duration-200" do %>
            Read More
            <svg class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          <% end %>
        </div>
      </div>
    </article>
  <% end %>
</div>

<% if @posts.empty? %>
  <div class="text-center py-16">
    <div class="w-32 h-32 mx-auto mb-6 bg-gradient-to-r from-blue-100 to-purple-100 rounded-full flex items-center justify-center">
      <svg class="w-16 h-16 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
      </svg>
    </div>
    <h3 class="text-2xl font-bold text-gray-900 mb-4">No posts yet</h3>
    <p class="text-gray-500 mb-8 max-w-md mx-auto">Be the first to share your thoughts with the community and start the conversation.</p>
    <% if user_signed_in? %>
      <%= link_to "Write First Post", new_post_path, class: "bg-gradient-to-r from-blue-600 to-purple-600 text-white px-8 py-3 rounded-full hover:from-purple-600 hover:to-blue-600 transition-all duration-300 shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 font-medium" %>
    <% else %>
      <%= link_to "Sign Up to Post", new_user_registration_path, class: "bg-gradient-to-r from-blue-600 to-purple-600 text-white px-8 py-3 rounded-full hover:from-purple-600 hover:to-blue-600 transition-all duration-300 shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 font-medium" %>
    <% end %>
  </div>
<% end %>

<div class="mt-12 flex justify-center">
  <%= paginate @posts if respond_to?(:paginate) %>
</div>