<!-- Animated Background Elements -->
<div class="fixed inset-0 overflow-hidden pointer-events-none -z-10">
  <div class="absolute top-20 left-10 w-72 h-72 bg-gradient-to-br from-blue-400/20 to-purple-500/20 rounded-full blur-3xl animate-pulse"></div>
  <div class="absolute bottom-20 right-10 w-96 h-96 bg-gradient-to-tl from-purple-400/20 to-pink-500/20 rounded-full blur-3xl animate-pulse delay-1000"></div>
</div>

<div class="max-w-4xl mx-auto relative">
  <!-- Hero Section with Post Header -->
  <div class="relative mb-12 bg-white/80 backdrop-blur-xl rounded-3xl shadow-2xl border border-white/20 p-8 md:p-12 overflow-hidden">
    <!-- Decorative gradient overlay -->
    <div class="absolute inset-0 bg-gradient-to-br from-blue-50/50 via-transparent to-purple-50/50 rounded-3xl"></div>
    
    <div class="relative z-10">
      <!-- Status Badge -->
      <% if @post.draft? %>
        <div class="inline-flex items-center px-4 py-2 rounded-full bg-gradient-to-r from-yellow-100 to-orange-100 border border-yellow-200/50 mb-6">
          <svg class="w-4 h-4 text-yellow-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"></path>
          </svg>
          <span class="text-sm font-semibold text-yellow-700">Draft Post</span>
        </div>
      <% else %>
        <div class="inline-flex items-center px-4 py-2 rounded-full bg-green-100 border border-green-200/50 mb-6">
          <svg class="w-4 h-4 text-green-800 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
          </svg>
          <span class="text-sm font-semibold text-green-800">Published</span>
        </div>
      <% end %>

      <!-- Post Title with Beautiful Gradient -->
      <h1 class="text-4xl md:text-6xl font-black leading-tight mb-8 text-gray-900">
        <%= @post.title %>
      </h1>
      
      <!-- Author and Date with Enhanced Styling -->
      <div class="flex items-center justify-between">
        <div class="flex items-center space-x-4">
          <% if @post.user %>
            <div class="flex items-center space-x-3">
              <div class="w-12 h-12 bg-gradient-to-r from-blue-500 to-purple-600 rounded-full flex items-center justify-center shadow-lg ring-4 ring-white/50">
                <span class="text-lg font-bold text-white"><%= @post.user.first_name.first.upcase %></span>
              </div>
              <div>
                <p class="font-semibold text-gray-900"><%= @post.user.full_name %></p>
                <p class="text-sm text-gray-500">Author</p>
              </div>
            </div>
          <% end %>
        </div>
        <div class="text-right">
          <p class="text-sm text-gray-500">Published on</p>
          <p class="font-semibold text-gray-700"><%= @post.created_at.strftime("%B %d, %Y") %></p>
        </div>
      </div>
    </div>
  </div>

  <!-- Owner Actions with Beautiful Styling -->
  <% if user_signed_in? && @post.user == current_user %>
    <div class="mb-8 bg-blue-50 rounded-2xl border border-blue-200/50 p-6 shadow-lg">
      <div class="flex items-center justify-between">
        <div class="flex items-center space-x-3">
          <div class="w-8 h-8 bg-blue-600 rounded-full flex items-center justify-center">
            <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
            </svg>
          </div>
          <p class="font-medium text-blue-800">You are the author of this post</p>
        </div>
        <div class="flex items-center space-x-3">
          <%= link_to edit_post_path(@post), class: "inline-flex items-center px-4 py-2 bg-blue-600 text-white rounded-full hover:bg-blue-700 font-medium transition-all duration-300 shadow-md hover:shadow-lg transform hover:-translate-y-0.5" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
            </svg>
            Edit Post
          <% end %>
          <%= link_to @post, data: { turbo_method: :delete, turbo_confirm: 'Are you sure you want to delete this post? This action cannot be undone.' }, class: "inline-flex items-center px-4 py-2 bg-red-600 text-white rounded-full hover:bg-red-700 font-medium transition-all duration-300 shadow-md hover:shadow-lg transform hover:-translate-y-0.5" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
            </svg>
            Delete Post
          <% end %>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Main Content with Beautiful Typography -->
  <div class="bg-white/90 backdrop-blur-sm rounded-3xl shadow-xl border border-white/20 p-8 md:p-12 mb-12">
    <div class="prose prose-xl max-w-none text-gray-800 leading-relaxed">
      <div class="text-lg leading-8 font-light">
        <%= simple_format(@post.content, {}, wrapper_tag: "div") %>
      </div>
    </div>
  </div>

  <!-- Elegant Divider -->
  <div class="flex items-center justify-center my-16">
    <div class="flex-grow h-px bg-gradient-to-r from-transparent via-gray-300 to-transparent"></div>
    <div class="mx-6">
      <div class="w-2 h-2 bg-gradient-to-r from-blue-500 to-purple-600 rounded-full"></div>
    </div>
    <div class="flex-grow h-px bg-gradient-to-r from-transparent via-gray-300 to-transparent"></div>
  </div>

  <!-- Comments Section with Enhanced Design -->
  <div id="comments" class="bg-white/80 backdrop-blur-xl rounded-3xl shadow-2xl border border-white/20 p-8 md:p-12">
    <!-- Comments Header -->
    <div class="mb-8">
      <h2 class="text-3xl font-bold bg-gradient-to-r from-purple-600 to-pink-600 bg-clip-text text-transparent mb-2 flex items-center">
        <svg class="w-8 h-8 mr-3 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
        </svg>
        Comments
      </h2>
      <p class="text-gray-600">Join the conversation and share your thoughts</p>
    </div>
    
    <!-- Comment Form or Login Prompt -->
    <% if user_signed_in? %>
      <div class="mb-10 bg-gradient-to-r from-blue-50/50 to-purple-50/50 rounded-2xl p-6 border border-blue-100/50">
        <%= render 'comments/form', post: @post, comment: @comment %>
      </div>
    <% else %>
      <div class="mb-10 text-center bg-gradient-to-r from-gray-50 to-blue-50/30 rounded-2xl p-8 border border-gray-200/50">
        <div class="w-16 h-16 bg-gradient-to-r from-blue-500 to-purple-600 rounded-full flex items-center justify-center mx-auto mb-4 shadow-lg">
          <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
          </svg>
        </div>
        <p class="text-gray-700 text-lg mb-4">Join the conversation!</p>
        <p class="text-gray-600 mb-6">Sign in to share your thoughts and engage with other readers.</p>
        <%= link_to new_user_session_path, class: "inline-flex items-center px-6 py-3 bg-gradient-to-r from-blue-600 to-purple-600 text-white rounded-full hover:from-purple-600 hover:to-blue-600 font-medium transition-all duration-300 shadow-lg hover:shadow-xl transform hover:-translate-y-0.5" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1"></path>
          </svg>
          Sign In to Comment
        <% end %>
      </div>
    <% end %>

    <!-- Comments List -->
    <div class="space-y-6" id="comments_list">
      <% if @comments.present? %>
        <%= render @comments %>
      <% else %>
        <div class="text-center py-12">
          <div class="w-20 h-20 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-10 h-10 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
            </svg>
          </div>
          <p class="text-gray-500 text-lg font-medium">No comments yet</p>
          <p class="text-gray-400">Be the first to share your thoughts!</p>
        </div>
      <% end %>
    </div>
  </div>
</div>

<!-- Back to Posts Button -->
<div class="max-w-4xl mx-auto mt-12 text-center">
  <%= link_to posts_path, class: "inline-flex items-center px-8 py-4 bg-gradient-to-r from-blue-600 to-purple-600 text-white rounded-full hover:from-purple-600 hover:to-blue-600 font-medium transition-all duration-300 shadow-lg hover:shadow-xl transform hover:-translate-y-1" do %>
    <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
    </svg>
    Back to All Posts
  <% end %>
</div>