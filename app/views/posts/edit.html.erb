<div class="max-w-5xl mx-auto">
  <div class="text-center mb-12">
    <h1 class="text-4xl font-bold bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent mb-4">
      ✏️ Edit Post
    </h1>
    <p class="text-xl text-gray-600">Update your post content and settings</p>
  </div>

  <div class="bg-white/80 backdrop-blur-sm rounded-2xl shadow-xl border border-gray-200/50">
    <%= form_with model: @post, local: true, class: "p-10 space-y-8" do |f| %>
      <% if @post.errors.any? %>
        <div class="bg-red-50 border-l-4 border-red-400 rounded-r-xl p-6">
          <div class="flex items-center mb-3">
            <svg class="w-5 h-5 text-red-400 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
            </svg>
            <h3 class="text-sm font-semibold text-red-800">Please fix the following errors:</h3>
          </div>
          <ul class="text-sm text-red-700 space-y-1">
            <% @post.errors.full_messages.each do |message| %>
              <li class="flex items-center">
                <svg class="w-3 h-3 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
                <%= message %>
              </li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div>
        <%= f.label :title, "Post Title", class: "block text-sm font-semibold text-gray-700 mb-3" %>
        <%= f.text_field :title, class: "w-full px-6 py-4 border border-gray-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent text-lg font-medium text-gray-700 shadow-sm" %>
      </div>

      <div>
        <%= f.label :body, "Post Content", class: "block text-sm font-semibold text-gray-700 mb-3" %>
        <%= f.text_area :body, rows: 15, class: "w-full px-6 py-4 border border-gray-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent resize-none text-gray-700 shadow-sm leading-relaxed" %>
      </div>

      <div>
        <%= f.label :status, "Publication Status", class: "block text-sm font-semibold text-gray-700 mb-3" %>
        <%= f.select :status, 
                     options_for_select([['Save as Draft', 'draft'], ['Publish', 'published']], @post.status), 
                     {}, 
                     { class: "px-6 py-4 border border-gray-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent text-gray-700 shadow-sm" } %>
      </div>

      <div class="flex items-center justify-between pt-8 border-t border-gray-200">
        <%= link_to @post, class: "inline-flex items-center text-gray-600 hover:text-gray-800 font-medium transition-colors duration-200" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
          </svg>
          Cancel
        <% end %>
        <div class="flex space-x-4">
          <%= link_to @post, method: :delete, confirm: "Are you sure you want to delete this post?", 
                      class: "inline-flex items-center text-red-600 hover:text-red-800 font-medium bg-red-50 px-6 py-3 rounded-full hover:bg-red-100 transition-all duration-200" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
            </svg>
            Delete Post
          <% end %>
          <%= f.submit "Update Post", class: "bg-gradient-to-r from-blue-600 to-purple-600 text-white px-10 py-4 rounded-full hover:from-purple-600 hover:to-blue-600 font-medium transition-all duration-300 shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 flex items-center" do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12"></path>
            </svg>
            Update Post
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>