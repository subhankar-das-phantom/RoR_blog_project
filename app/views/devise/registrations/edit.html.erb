<div class="max-w-2xl mx-auto">
  <div class="bg-white/80 backdrop-blur-xl rounded-3xl shadow-2xl border border-white/20 p-8 md:p-12">
    <div class="text-center mb-8">
      <h2 class="text-3xl font-bold bg-gradient-to-r from-purple-600 to-pink-600 bg-clip-text text-transparent">
        Edit Your Profile
      </h2>
      <p class="text-gray-600 mt-2">Update your account information</p>
    </div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="space-y-6">
        <div class="field">
          <%= f.label :first_name, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.text_field :first_name, autofocus: true, class: "w-full px-4 py-3 bg-white/50 border border-gray-200 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all" %>
        </div>

        <div class="field">
          <%= f.label :last_name, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.text_field :last_name, class: "w-full px-4 py-3 bg-white/50 border border-gray-200 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all" %>
        </div>

        <div class="field">
          <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.email_field :email, autocomplete: "email", class: "w-full px-4 py-3 bg-white/50 border border-gray-200 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all" %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div class="bg-yellow-50 border-l-4 border-yellow-400 p-4 rounded-r-lg">
            <p class="text-sm text-yellow-700">Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
          </div>
        <% end %>

        <div class="field">
          <%= f.label :password, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <i class="text-xs text-gray-500">(leave blank if you don't want to change it)</i>
          <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-4 py-3 mt-1 bg-white/50 border border-gray-200 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all" %>
          <% if @minimum_password_length %>
            <p class="text-xs text-gray-500 mt-1"><em><%= @minimum_password_length %> characters minimum</em></p>
          <% end %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-4 py-3 bg-white/50 border border-gray-200 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all" %>
        </div>

        <div class="field">
          <%= f.label :current_password, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <i class="text-xs text-gray-500">(we need your current password to confirm your changes)</i>
          <%= f.password_field :current_password, autocomplete: "current-password", class: "w-full px-4 py-3 mt-1 bg-white/50 border border-gray-200 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all" %>
        </div>
      </div>

      <div class="actions mt-8">
        <%= f.submit "Update Profile", class: "w-full cursor-pointer inline-flex items-center justify-center px-8 py-4 bg-gradient-to-r from-blue-600 to-purple-600 text-white rounded-full hover:from-purple-600 hover:to-blue-600 font-medium transition-all duration-300 shadow-lg hover:shadow-xl transform hover:-translate-y-1" %>
      </div>
    <% end %>

    <hr class="my-8 border-gray-200">

    <div class="text-center">
      <h3 class="text-lg font-medium text-gray-800">Cancel My Account</h3>
      <p class="text-sm text-gray-500 mt-1 mb-4">Unhappy with your account? You can cancel it permanently.</p>
      <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure you want to cancel your account? This action cannot be undone." }, method: :delete, class: "inline-flex items-center px-4 py-2 bg-red-600 text-white rounded-full hover:bg-red-700 font-medium transition-all duration-300 shadow-md hover:shadow-lg" %>
    </div>
  </div>
</div>
