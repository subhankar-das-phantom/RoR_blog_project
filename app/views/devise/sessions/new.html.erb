<div class="max-w-md mx-auto bg-white/80 backdrop-blur-sm rounded-2xl shadow-xl border border-gray-200/50">
  <div class="p-10">
    <div class="text-center mb-10">
      <div class="w-16 h-16 bg-gradient-to-r from-blue-600 to-purple-600 rounded-full flex items-center justify-center mx-auto mb-4">
        <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 20 20">
          <path d="M2 5a2 2 0 012-2h7a2 2 0 012 2v4a2 2 0 01-2 2H9l-3 3v-3H4a2 2 0 01-2-2V5z"></path>
          <path d="M15 7v2a4 4 0 01-4 4H9.828l-1.766 1.767c.28.149.599.233.938.233h2l3 3v-3h2a2 2 0 002-2V9a2 2 0 00-2-2h-1z"></path>
        </svg>
      </div>
      <h2 class="text-3xl font-bold bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent">Welcome Back</h2>
      <p class="text-gray-600 mt-3">Sign in to continue your blogging journey</p>
    </div>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="space-y-8">
        <div>
          <%= f.label :email, class: "block text-sm font-semibold text-gray-700 mb-2" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", 
                              class: "w-full px-4 py-3 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent text-gray-700 shadow-sm" %>
        </div>

        <div>
          <%= f.label :password, class: "block text-sm font-semibold text-gray-700 mb-2" %>
          <%= f.password_field :password, autocomplete: "current-password", 
                                  class: "w-full px-4 py-3 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent text-gray-700 shadow-sm" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="flex items-center">
            <%= f.check_box :remember_me, class: "h-5 w-5 text-blue-600 border-gray-300 rounded focus:ring-blue-500" %>
            <%= f.label :remember_me, class: "ml-3 text-sm font-medium text-gray-700" %>
          </div>
        <% end %>

        <div>
          <%= f.submit "Sign In", class: "w-full bg-gradient-to-r from-blue-600 to-purple-600 text-white py-4 px-6 rounded-full hover:from-purple-600 hover:to-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500 font-medium transition-all duration-300 shadow-lg hover:shadow-xl transform hover:-translate-y-0.5" %>
        </div>
      </div>
    <% end %>

    <div class="mt-8 space-y-4 text-center">
      <% if devise_mapping.recoverable? %>
        <%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-blue-600 hover:text-purple-600 text-sm font-medium transition-colors duration-200" %>
      <% end %>
      
      <div class="border-t border-gray-200 pt-6">
        <p class="text-gray-600 mb-4">
          Don't have an account?
        </p>
        <%= link_to new_registration_path(resource_name), class: "inline-flex items-center text-blue-600 hover:text-purple-600 font-semibold transition-colors duration-200" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"></path>
          </svg>
          Sign Up Now
        <% end %>
      </div>
    </div>
  </div>
</div>
