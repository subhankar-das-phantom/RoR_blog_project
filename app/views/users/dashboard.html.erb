<!-- Recent Posts -->
<div class="grid lg:grid-cols-2 gap-10">
  <!-- Published Posts -->
  <div class="bg-white/80 backdrop-blur-sm rounded-2xl shadow-lg border border-gray-200/50 overflow-hidden">
    <div class="p-8 border-b border-gray-200/50 bg-gradient-to-r from-green-50 to-emerald-50">
      <h2 class="text-2xl font-bold text-gray-900 flex items-center"><svg class="w-6 h-6 mr-3 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>Recent Published Posts</h2>
    </div>
    <div class="p-8">
      <% if @published_posts.any? %>
        <div class="space-y-6">
          <% @published_posts.each do |post| %>
            <div class="flex items-start justify-between p-4 rounded-xl hover:bg-gray-50 transition-all duration-200">
              <div class="flex-1">
                <h3 class="font-semibold text-gray-900 hover:text-blue-600 transition-colors duration-200 mb-2"><%= link_to post.title, post %></h3>
                <p class="text-sm text-gray-500 flex items-center"><svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path></svg><%= pluralize(post.comments.count, 'comment') %> â€¢ <svg class="w-4 h-4 ml-2 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg><%= post.created_at.strftime("%b %d") %></p>
              </div>
              <div class="flex space-x-3 ml-4">
                <%= link_to edit_post_path(post), class: "text-blue-600 hover:text-blue-800 text-sm font-medium bg-blue-50 px-3 py-1 rounded-lg hover:bg-blue-100 transition-all duration-200" do %><svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path></svg>Edit<% end %>
                <%= link_to post, class: "text-gray-600 hover:text-gray-800 text-sm font-medium bg-gray-50 px-3 py-1 rounded-lg hover:bg-gray-100 transition-all duration-200" do %><svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path></svg>View<% end %>
              </div>
            </div>
          <% end %>
        </div>
        <div class="mt-8 pt-6 border-t border-gray-200">
          <%= link_to posts_path, class: "inline-flex items-center text-blue-600 hover:text-purple-600 font-medium transition-colors duration-200" do %>View All Published Posts<svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path></svg><% end %>
        </div>
      <% else %>
        <div class="text-center py-8">
          <div class="w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4"><svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path></svg></div>
          <p class="text-gray-500 font-medium">No published posts yet</p>
          <p class="text-gray-400 text-sm mt-1">Publish your first post to see it here</p>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Draft Posts -->
  <div class="bg-white/80 backdrop-blur-sm rounded-2xl shadow-lg border border-gray-200/50 overflow-hidden">
    <div class="p-8 border-b border-gray-200/50 bg-gradient-to-r from-yellow-50 to-orange-50">
      <h2 class="text-2xl font-bold text-gray-900 flex items-center"><svg class="w-6 h-6 mr-3 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"></path></svg>Draft Posts</h2>
    </div>
    <div class="p-8">
      <% if @draft_posts.any? %>
        <div class="space-y-6">
          <% @draft_posts.each do |post| %>
            <div class="flex items-start justify-between p-4 rounded-xl hover:bg-gray-50 transition-all duration-200">
              <div class="flex-1">
                <h3 class="font-semibold text-gray-900 hover:text-blue-600 transition-colors duration-200 mb-2"><%= link_to post.title, post %></h3>
                <p class="text-sm text-gray-500 flex items-center"><svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>Last updated <%= post.updated_at.strftime("%b %d") %></p>
              </div>
              <div class="flex space-x-3 ml-4">
                <%= link_to edit_post_path(post), class: "text-blue-600 hover:text-blue-800 text-sm font-medium bg-blue-50 px-3 py-1 rounded-lg hover:bg-blue-100 transition-all duration-200" do %><svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path></svg>Edit<% end %>
                
                <%= button_to publish_post_path(post), method: :patch, class: "text-green-600 hover:text-green-800 text-sm font-medium bg-green-50 px-3 py-1 rounded-lg hover:bg-green-100 transition-all duration-200" do %>
                  <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path></svg>
                  Publish
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="text-center py-8">
          <div class="w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4"><svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"></path></svg></div>
          <p class="text-gray-500 font-medium">No drafts saved</p>
          <p class="text-gray-400 text-sm mt-1">Start writing to create your first draft</p>
        </div>
      <% end %>
    </div>
  </div>
</div>

<!-- Recent Comments -->
<div class="mt-12 bg-white/80 backdrop-blur-sm rounded-2xl shadow-lg border border-gray-200/50 overflow-hidden">
  <div class="p-8 border-b border-gray-200/50 bg-gradient-to-r from-purple-50 to-pink-50">
    <h2 class="text-2xl font-bold text-gray-900 flex items-center"><svg class="w-6 h-6 mr-3 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path></svg>Recent Comments on Your Posts</h2>
  </div>
  <div class="p-8">
    <% if @recent_comments.any? %>
      <div class="space-y-6">
        <% @recent_comments.each do |comment| %>
          <div class="flex items-start space-x-5 p-4 rounded-xl hover:bg-gray-50 transition-all duration-200">
            <div class="w-12 h-12 bg-gradient-to-r from-green-500 to-teal-500 rounded-full flex items-center justify-center text-white text-sm font-semibold shadow-lg">
              <%= comment.user.first_name.first.upcase %>
            </div>
            <div class="flex-1">
              <div class="flex items-center space-x-2 mb-2">
                <span class="font-semibold text-gray-900"><%= comment.user.full_name %></span>
                <span class="text-gray-500">commented on</span>
                <%= link_to comment.post.title, comment.post, class: "text-blue-600 hover:text-purple-600 font-semibold transition-colors duration-200" %>
              </div>
              <p class="text-gray-600 mb-2 leading-relaxed"><%= comment.body.truncate(120) %></p>
              <p class="text-sm text-gray-500 flex items-center"><svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg><%= comment.created_at.strftime("%B %d, %Y at %I:%M %p") %></p>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-12">
        <div class="w-20 h-20 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4"><svg class="w-10 h-10 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path></svg></div>
        <p class="text-gray-500 font-medium">No comments on your posts yet</p>
        <p class="text-gray-400 text-sm mt-1">Share your posts to start getting feedback from the community</p>
      </div>
    <% end %>
  </div>
</div>